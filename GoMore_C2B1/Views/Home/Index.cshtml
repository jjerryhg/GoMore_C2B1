@{ ViewBag.Title = "Home Page"; }
@using GoMore_C2B1.Resource;

@Styles.Render("~/Content/main")
@Styles.Render("~/Content/DarkMode")
@Styles.Render("~/Content/home")

<main id="content" style="margin-left: 0px; margin-top: 0px;">
    <img src="#" id="testImages" class="hidden">
    <!-- <div class="canvas-container" id="canvasContainer">
      <canvas id="canvas" class="canvas">

      </canvas>
    </div>
    <button onclick="myCanvas()">Click Me</button> -->
    <div class="home-page">
        <div class="home-container">
            <div class="home-header">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="width: 100%; max-height: 750px;" src="~/test-3.jpg" alt="First slide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="width: 100%; max-height: 750px;" src="~/test-4.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="width: 100%; max-height: 750px;" src="~/test-5.jpg" alt="Third slide">
                        </div>
                    </div>
                    <div class="carousel-prev-container">
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only" style="font-weight: 600; color: white;">Previous</span>
                        </a>
                    </div>
                    <div class="carousel-next-container">
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true" style="color: var(--font-color);"></span>
                            <span class="sr-only" style="font-weight: 600; color: white;">Next</span>
                        </a>
                    </div>
                </div>
                <div class="home-title">
                    <h2>GoMore Dashboard</h2>
                </div>

            </div>
            <div class="home-body">
                <div class="home-body-container">
                    <div class="body-container-wrapper">
                        <div class="home-body-content">
                            <h2>@Resource.Library</h2>
                            <i class="bi bi-folder-fill"></i>
                        </div>
                        <div class="home-body-content">
                            <h2>@Resource.Factory</h2>
                            <i class="bi bi-gear-wide-connected"></i>
                        </div>
                        <div class="home-body-content">
                            <h2>@Resource.Schedule</h2>
                            <i class="bi bi-calendar3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</main>

<script src="~/Scripts/main.js"></script>